<?xml version="1.0"?>
<robot name="niryo_ned2" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- Define materials with Niryo colors -->
  <material name="niryo_blue">
    <color rgba="0.1 0.3 0.8 1"/>
  </material>
  
  <material name="niryo_white">
    <color rgba="0.9 0.9 0.9 1"/>
  </material>
  
  <material name="niryo_black">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>
  
  <material name="niryo_grey">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>

  <!-- Base Link - Robot base -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.08"/>
      </geometry>
      <material name="niryo_blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.08"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <mass value="1.8"/>
      <inertia ixx="0.008" ixy="0" ixz="0" iyy="0.008" iyz="0" izz="0.012"/>
    </inertial>
  </link>

  <!-- Joint 1 - Base to Shoulder -->
  <joint name="joint_1" type="revolute">
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.967" upper="2.967" effort="50" velocity="1.57"/>
  </joint>

  <!-- Shoulder Link - Rotating shoulder section -->
  <link name="shoulder_link">
    <visual>
      <origin xyz="0 0 0.035" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.08 0.07"/>
      </geometry>
      <material name="niryo_white"/>
    </visual>
    <visual>
      <origin xyz="0 0.04 0.07" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.08"/>
      </geometry>
      <material name="niryo_grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.035" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.08 0.07"/>
      </geometry>
    </collision>
    <collision>
      <origin xyz="0 0.04 0.07" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.08"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="1.2"/>
      <inertia ixx="0.006" ixy="0" ixz="0" iyy="0.008" iyz="0" izz="0.006"/>
    </inertial>
  </link>

  <!-- Joint 2 - Shoulder to Arm -->
  <joint name="joint_2" type="revolute">
    <origin xyz="0 0.04 0.07" rpy="0 0 0"/>
    <parent link="shoulder_link"/>
    <child link="arm_link"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.658" upper="1.658" effort="50" velocity="1.57"/>
  </joint>

  <!-- Arm Link - Upper arm -->
  <link name="arm_link">
    <visual>
      <origin xyz="0.1 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.2"/>
      </geometry>
      <material name="niryo_blue"/>
    </visual>
    <visual>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.06 0.05"/>
      </geometry>
      <material name="niryo_white"/>
    </visual>
    <collision>
      <origin xyz="0.1 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.2"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.1 0 0" rpy="0 1.57 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.018" iyz="0" izz="0.018"/>
    </inertial>
  </link>

  <!-- Joint 3 - Arm to Elbow -->
  <joint name="joint_3" type="revolute">
    <origin xyz="0.2 0 0" rpy="0 0 0"/>
    <parent link="arm_link"/>
    <child link="elbow_link"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.397" upper="1.397" effort="30" velocity="1.57"/>
  </joint>

  <!-- Elbow Link - Elbow joint housing -->
  <link name="elbow_link">
    <visual>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.06"/>
      </geometry>
      <material name="niryo_white"/>
    </visual>
    <visual>
      <origin xyz="0 0.03 0.06" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.06"/>
      </geometry>
      <material name="niryo_grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <mass value="0.7"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
    </inertial>
  </link>

  <!-- Joint 4 - Elbow to Forearm -->
  <joint name="joint_4" type="revolute">
    <origin xyz="0 0.03 0.06" rpy="0 0 0"/>
    <parent link="elbow_link"/>
    <child link="forearm_link"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.094" upper="2.094" effort="30" velocity="1.57"/>
  </joint>

  <!-- Forearm Link - Lower arm -->
  <link name="forearm_link">
    <visual>
      <origin xyz="0.08 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.16"/>
      </geometry>
      <material name="niryo_blue"/>
    </visual>
    <visual>
      <origin xyz="0.04 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.04"/>
      </geometry>
      <material name="niryo_white"/>
    </visual>
    <collision>
      <origin xyz="0.08 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.16"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.08 0 0" rpy="0 1.57 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.006" iyz="0" izz="0.006"/>
    </inertial>
  </link>

  <!-- Joint 5 - Forearm to Wrist -->
  <joint name="joint_5" type="revolute">
    <origin xyz="0.16 0 0" rpy="0 0 0"/>
    <parent link="forearm_link"/>
    <child link="wrist_link"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.967" upper="2.967" effort="20" velocity="2.0"/>
  </joint>

  <!-- Wrist Link - Wrist rotation -->
  <link name="wrist_link">
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.022" length="0.04"/>
      </geometry>
      <material name="niryo_white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.022" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <mass value="0.25"/>
      <inertia ixx="0.0003" ixy="0" ixz="0" iyy="0.0003" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Joint 6 - Wrist to Hand -->
  <joint name="joint_6" type="revolute">
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
    <parent link="wrist_link"/>
    <child link="hand_link"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.658" upper="1.658" effort="20" velocity="2.0"/>
  </joint>

  <!-- Hand Link - End effector / gripper mount -->
  <link name="hand_link">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.04 0.05"/>
      </geometry>
      <material name="niryo_black"/>
    </visual>
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.02"/>
      </geometry>
      <material name="niryo_grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.04 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <mass value="0.15"/>
      <inertia ixx="0.0002" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Gazebo plugins and colors -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>
  
  <gazebo reference="shoulder_link">
    <material>Gazebo/White</material>
  </gazebo>
  
  <gazebo reference="arm_link">
    <material>Gazebo/Blue</material>
  </gazebo>
  
  <gazebo reference="elbow_link">
    <material>Gazebo/White</material>
  </gazebo>
  
  <gazebo reference="forearm_link">
    <material>Gazebo/Blue</material>
  </gazebo>
  
  <gazebo reference="wrist_link">
    <material>Gazebo/White</material>
  </gazebo>
  
  <gazebo reference="hand_link">
    <material>Gazebo/Black</material>
  </gazebo>

</robot>